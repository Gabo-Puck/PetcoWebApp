              <i class="fa-solid fa-trash"></i>
            </button>
          </div>
          <!-- View on mobile -->
          <div class="input-group-text d-flex d-sm-none eliminarBox mobileView">
            <button
              type="button"
              class="btn btn-info btn-sm eliminarButton"
              onclick="displayModal(this)"
            >
              <!-- onclick="this.parentNode.parentNode.parentNode.remove()" -->
              <i class="fa-solid fa-ellipsis-vertical"></i>
            </button>
            <!-- Modal -->
            <div
              class="modal fade"
              id="exampleModal"
              tabindex="-1"
              aria-labelledby="exampleModalLabel"
              data-bs-backdrop="static"
              aria-hidden="true"
            >
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                      Pregunta Configuración
                    </h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <div class="d-flex flex-column my-3">
                      <button
                        type="button"
                        class="btn btn-danger btn-sm eliminarButton mb-5 mx-auto"
                        style="width: 80%"
                        data-bs-dismiss="modal"
                        onclick="selectParent(this,'preguntaMultiple')"
                      >
                        Eliminar
                      </button>
                      <div
