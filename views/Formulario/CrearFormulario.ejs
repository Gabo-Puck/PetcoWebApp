                      >
                        <div>
                          <input
                            class="form-check-input opcionalMb"
                            type="checkbox"
                            checked=""
                            name=""
                          />
                          <label for="isRequired" class="form-check-label"
                            >Opcional</label
                          >
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                      >
                        Cerrar
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group ms-4 me-0 mb-4 respuestas" style="width: 90%">
          <div class="input-group mb-3 respuesta" id="resp1">
            <div class="input-group-text" style="background-color: transparent">
              <i class="fa-regular fa-circle"></i>
            </div>
            <textarea
              name=""
              class="form-control"
              placeholder="Hola! Soy una respuesta"
            ></textarea>
            <div class="input-group-text eliminarBox">
              <button
                type="button"
                class="btn btn-danger btn-sm eliminarButton"
                onclick="this.parentNode.parentNode.remove()"
              >
                <i class="fa-solid fa-trash"></i>
              </button>
            </div>
          </div>

          <button
            class="btn btn-outline-info agregarRespuesta"
            type="button"
            style="width: 100%"
            onclick="addRespuestaMultiple(this)"
          >
            Agregar respuesta
          </button>
        </div>
      </div>
    </form>
    <div class="control-panel mx-auto" style="width: 80%">
      <div class="dropup-center dropup">
        <button
          class="btn btn-secondary mb-3 dropdown-toggle"
          style="width: 100%"
          type="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          Agregar pregunta
        </button>
        <ul
          class="dropdown-menu"
          style="background-color: transparent; border: none; width: 100%"
        >
          <li>
            <button
              type="button"
              class="btn btn-warning mb-3 agregarPreguntaAbierta"
              style="width: 100%"
            >
              Abierta
            </button>
          </li>
          <li>
            <button
              type="button"
              class="btn btn-warning mb-3 agregarPreguntaCerrada"
              style="width: 100%"
            >
              Cerrada
            </button>
          </li>
          <li>
            <button
              type="button"
              class="btn btn-warning agregarPreguntaMultiple"
              style="width: 100%"
            >
              Multiple
            </button>
          </li>
        </ul>
      </div>
      <div style="width: 100%">
        <button
          type="button"
          class="btn btn-primary mx-auto guardarButton"
          style="width: 100%"
        >
          Guardar
        </button>
      </div>
    </div>
  </body>
  <!-- JavaScript and dependencies -->
  <script src="/javascripts/CrearFormulario.js"></script>
</html>
